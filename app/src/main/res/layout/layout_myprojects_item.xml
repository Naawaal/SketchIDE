<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stateListAnimator="@null"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:layout_marginHorizontal="05dp"
    android:layout_marginVertical="02dp"
    android:alpha="0.9"
    app:rippleColor="@color/ColorGray"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="02dp"
    app:strokeWidth="00dp">

        <LinearLayout
            android:id="@+id/project_one"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="?selectableItemBackground"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/app_icon_layout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="25dp">

                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_bg_white"
                    android:contentDescription="@null" />

                <com.androidbulb.circleimage.CircleImageView
                    android:id="@+id/project_icon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    android:src="@drawable/android_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center|start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        tools:text="@string/app_name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/project_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#727272"
                            android:textSize="12sp"
                            tools:text="ProjectDemo" />

                        <TextView
                            android:id="@+id/project_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/ColorGray"
                            android:textSize="11sp"
                            tools:text="1.0(1)" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/package_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ColorGray"
                        android:textSize="12sp"
                        tools:text="@string/website" />
                </LinearLayout>


                <TextView
                    android:id="@+id/project_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:textColor="#3F51B5"
                    android:textSize="12sp"
                    tools:text="01" />
            </RelativeLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
